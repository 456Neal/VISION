{
  "manifest_version": 3,
  "name": "VISION - Student Monitor",
  "version": "1.0.0",
  "description": "Keep an eye on your devices and your students - Student Monitor",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
