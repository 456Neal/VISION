{
    "manifest_version": 3,
    "name": "VISION - Student Extension",
    "version": "1.0.0",
    "description": "VISION Classroom Management System - Student Module",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "desktopCapture",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["styles.css"],
        "js": ["content.js"]
    }],
    "action": {
        "default_icon": "icon.png",
        "default_title": "VISION Student"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
