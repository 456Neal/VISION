{
  "manifest_version": 3,
  "name": "VISION - Admin Control",
  "version": "1.0.0",
  "description": "Keep an eye on your devices and your students - Admin Control",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "desktopCapture",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "VISION Admin"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["admin-panel.html", "styles.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
