{
  "manifest_version": 3,
  "name": "VISION - Admin Control Panel",
  "version": "1.0.0",
  "description": "Keep an eye on your devices and your students - Admin Control Panel",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "desktopCapture",
    "tabCapture",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "VISION Admin Panel"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
